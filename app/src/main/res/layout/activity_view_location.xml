<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewLocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/viewAddress"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSnap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/list_view_extinguisher"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:onClick="toSnapImageActivity"
            android:text="Snap image" />

        <EditText
            android:id="@+id/new_extinguisher_extinguisherNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extinguisher Number"
            />

        <EditText
            android:id="@+id/new_extinguisher_subLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extinguisher location"
            />

        <EditText
            android:id="@+id/new_extinguisher_manufacturingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extinguisher Manufacturing Date"
            />

        <EditText
            android:id="@+id/new_extinguisher_expiryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Extinguisher Expiry Date"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add extinguisher"
            android:onClick="addExtinguisher"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete location"
            android:onClick="deleteLocation"/>


        <TextView
            android:id="@+id/extinguishers"
            android:text="Extinguisher placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/list_view_extinguisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

    </LinearLayout>

</ScrollView>